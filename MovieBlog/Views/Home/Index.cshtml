@model IEnumerable<MovieBlog.Models.MyBlog>
@using Microsoft.AspNetCore.Identity
@inject UserManager<Author> UserManager
@inject SignInManager<Author> SignInManager

@{ ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Movie Blog</h1>
</div>


@if (User.Identity.IsAuthenticated)
{

    var Author = await UserManager.GetUserAsync(User);



    @if (!Model.Any())
    {
        <div class="text-center">
            <h1 class="display-4">You don't have any content published yet!</h1>

        </div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Author.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Heading)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>

                            @Html.DisplayNameFor(modelItem => item.Author.Name)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Heading)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Content)
                        </td>


                    </tr>
                }
            </tbody>
        </table>

    }
}

