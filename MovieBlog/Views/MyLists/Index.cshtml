@model IEnumerable<MovieBlog.Models.MyList>

@{
    ViewData["Title"] = "Index";
}

<h2>Movie List</h2>

<p>
    <a asp-action="Create">Add a new movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.IsCompleted)
                {
                    @Html.DisplayFor(modelItem => item.Movie)
                }
                else
                {
                <b> @Html.DisplayFor(modelItem => item.Movie)</b>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>

            <td>
                @if (item.IsCompleted)
                {
                    <a asp-action="Watched" asp-route-id="@item.Id">Unwatched</a>
                }
                else
                {
                    <a asp-action="Unwatched" asp-route-id="@item.Id">Watched</a>

                }

                | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
